#!/usr/bin/env node

const { build, start } = require('ale-webpack');

const { version } = require('ale-webpack/package.json');
const { program } = require('commander');

program.version(version);

program
  .option(
    '--env <environments>',
    '选择 .env-cmdrc.json 中的环境变量, 多个用逗号隔开',
  )
  .option('--env-local <local>', '指定 .env.local 覆盖 .env')
  .option('--verbose');

program
  .command('dev')
  .description('开发工具')
  .action(() => {
    let environments;

    if (program.env) {
      environments = program.env.split(',');
    }

    return start({
      envOptions: {
        environments,
        local: program.envLocal,
        verbose: program.verbose,
      },
    });
  });

program
  .command('build')
  .description('打包工具')
  .action(() => {
    let environments;

    if (program.env) {
      environments = program.env.split(',');
    }

    return build({
      envOptions: {
        environments,
        local: program.envLocal,
        verbose: program.verbose,
      },
    });
  });

program.parse(process.argv);
